<div class="container">
  <div class="row">
    <h1 class="mt-3">Books search for "<%= @books %>"</h1>
    <table class="table">
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th>Tag</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image, size: "80x80" %></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= book.category %></td>
        <td id="favorite_button_<%= book.id %>">
          <%= render "books/favorite", book: book %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>