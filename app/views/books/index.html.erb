<div class="container">
  <div class="row">
    <%= render "users/info", {user: current_user, book: @book} %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover">
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(@user) do %>
               <%= image_tag @user.get_image %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.comment %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>