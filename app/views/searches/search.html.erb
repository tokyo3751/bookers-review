  <div class="container">
    <div class="row">
      <!--検索対象モデルがUserの時 -->
      <% if @range == "User" %>
      <h1 class="mt-3">Users search for "<%= @word %>"</h1>
       <table class="table mt-3">
          <tbody>
              <tr>
                <th>image</th>
                <th>name</th>
                <th></th>
              </tr>
              <% @users.each do |user| %>
                <tr>
                  <td><%= image_tag user.get_profile_image, size: "50x50" %></td>
                  <td><%= user.name %></td>
                  <td><%= link_to "Show", user_path(user.id) %></td>
                </tr>
              <% end %>
          </tbody>
        </table>
      <% else %>
        <!--検索対象モデルがUserではない時(= 検索対象モデルがBookの時) -->
        <h1 class="mt-3">Books search for "<%= @word %>"</h1>
        <table class="table mt-3">
          <tbody>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Opinion</th>
              </tr>
              <% @books.each do |book| %>
                <tr>
                  <td><%= image_tag book.user.get_profile_image, size: "50x50" %></td>
                  <td><%= link_to book.title, book_path(book.id) %></td>
                  <td><%= book.body %></td>
                </tr>
              <% end %>
          </tbody>
        </table>
      <% end %>
  </div>
</div>